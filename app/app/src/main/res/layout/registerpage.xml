<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Your School"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp"/>

        <!-- School Details -->
        <EditText
            android:id="@+id/et_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School Name"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_school_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School Code"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School Email"
            android:inputType="textEmailAddress"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <!-- Phone Numbers -->
        <EditText
            android:id="@+id/et_phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number 1"
            android:inputType="phone"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number 2"
            android:inputType="phone"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <!-- Principal Details -->
        <EditText
            android:id="@+id/et_principal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Principal Name"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_principal_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Principal Email"
            android:inputType="textEmailAddress"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <!-- Admin Details -->
        <EditText
            android:id="@+id/et_admin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Name"
            android:inputType="text"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_admin_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Phone"
            android:inputType="phone"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_admin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Email"
            android:inputType="textEmailAddress"
            android:textSize="23sp"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="10dp"/>

        <!-- Proof Document Upload -->
        <Button
            android:id="@+id/btn_upload_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Proof Document"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</ScrollView>
